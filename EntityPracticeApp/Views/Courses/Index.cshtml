@{
}
@model IEnumerable<EntityPracticeApp.ViewModel.CourseViewModel>;
<h2>Courses</h2>
<div>
    <button class=" btn-primary bg-light">
        <a class="nav-link text-dark" asp-controller="Courses" asp-action="Add">Add Course</a>
    </button>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>
                  @*   <a asp-action="Edit" asp-route-Id="@item.CourseId">Edit</a> | *@
                    <a asp-action="Edit" asp-route-Id="@item.CourseId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.CourseId" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a> |
                    <a asp-action="ShowStudent" asp-route-Id="@item.CourseId">Show Students</a> |
                    <a asp-action="MapStudents" asp-route-Id="@item.CourseId">Map Students</a> |

                </td>
            </tr>
        }

    </tbody>
</table>
