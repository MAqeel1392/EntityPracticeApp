
@{
    ViewData["Title"] = "Details";
}
@model IEnumerable<EntityPracticeApp.ViewModel.StudentViewModel>;

<h1>Students Detail</h1>
<div>
    <button class=" btn-primary bg-light">
    <a class="nav-link text-dark" asp-controller="Students" asp-action="Add">Add Student</a>
    </button>
</div>

<table class="table">
    <thead>
        <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>DOB</th>
        <th>University</th>
        <th>Gender</th>
        <th>Action</th>
        
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model){
            <tr>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.DateOfBirth</td>
                <td>@item.University</td>
                <td>@item.Gender</td>
                <td>
                    <a asp-action="Edit" asp-route-Id="@item.Sid">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Sid" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a> |
                    <a asp-action="ShowCourses" asp-route-Id="@item.Sid">Show Courses</a> |
                    <a asp-action="MapCourses" asp-route-Id="@item.Sid" >Map Courses</a>
                </td>
            </tr>
        }
    </tbody>
</table>
